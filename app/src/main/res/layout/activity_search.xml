<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:background="@drawable/search_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"

        >
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="8dp">

</LinearLayout>

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            android:ems="10"
            android:textSize="15dp"
            android:endColor="#ffffff"
            android:fontFamily="@font/nanum_normal"
            android:gravity="center"
            android:hint="재료, 음식명을 검색해주세요."
            android:inputType="textPersonName"
            android:startColor="#ffffff"
            android:state_enabled="false" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/search" />

    </LinearLayout>

    <TabHost
        android:id="@+id/tabHost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fontFamily="@font/nanum_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TabWidget의 id값이 반드시 "tabs"로 지정되어야 함. -->
            <TabWidget

                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- FrameLayout의 id값이 반드시 "tabcontent"로 지정되어야 함. -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 첫 번째 페이지. content1 -->
                <LinearLayout
                    android:id="@+id/content1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity ="center"
                        android:fillViewport="true"
                        android:layout_marginTop="0dp"
                        android:id="@+id/scrollView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="20dp"


                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nanum_normal"
                                android:text="국가별"
                                android:textColor="@color/colorModernBlack"
                                android:textSize="20dp"

                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/nation0"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_korea" />

                                <ImageView
                                    android:id="@+id/nation1"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_panda" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/nation2"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_japan" />

                                <ImageView
                                    android:id="@+id/nation3"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_west" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/nation4"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_italia" />

                                <ImageView
                                    android:id="@+id/nation5"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/nation_fusion" />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="20dp"


                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/nanum_normal"
                                android:text="요리별"
                                android:textColor="@color/colorModernBlack"
                                android:textSize="20dp"

                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/cook0"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook1" />

                                <ImageView
                                    android:id="@+id/cook1"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook2" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/cook2"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook3" />

                                <ImageView
                                    android:id="@+id/cook3"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook4" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/cook4"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook5" />

                                <ImageView
                                    android:id="@+id/cook5"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook6" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/cook6"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook7" />

                                <ImageView
                                    android:id="@+id/cook7"
                                    android:layout_width="0dp"
                                    android:layout_height="110dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/cook8" />
                            </LinearLayout>
                        </LinearLayout>
                        </LinearLayout>
                </ScrollView>

                </LinearLayout>

                <!-- 두 번째 페이지. content2 -->
                <LinearLayout
                    android:id="@+id/content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/search_list_popular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!-- 세 번째 페이지. content3 -->
                <LinearLayout
                    android:id="@+id/content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/search_list_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>