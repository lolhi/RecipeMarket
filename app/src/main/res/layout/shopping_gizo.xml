<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/gizo_back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"

                    app:srcCompat="@drawable/back_arr" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="5">
                    <ImageView

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/profile_jadoo"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanum_normal"
                        android:gravity="center"
                        android:text="기조 자두농장"
                        android:textColor="@color/colorModernBlack"
                        android:textSize="20dp"

                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/gizo_basket"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    app:srcCompat="@drawable/jangbagoony"/>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="5dp"

                    android:layout_marginLeft="25dp"

                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_bold"
                    android:textColor="@color/colorModernBlack"

                    android:text="농장소개"
                    android:textSize="11dp"/>

                <TextView
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_normal"
                    android:textColor="@color/colorModernBlack"

                    android:text="자두가 한참 영글어 가고 있네요. 결과물이 나옵니다."
                    android:textSize="11dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"

                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_bold"
                    android:textColor="@color/colorModernBlack"

                    android:text="공지사항"
                    android:textSize="11dp"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_normal"
                    android:textColor="@color/colorModernBlack"

                    android:text="유지자사경성(有志者事竟成)-뜻하는바를 이루시길"
                    android:textSize="11dp"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@drawable/line"/>


            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_normal"
                android:textColor="@color/colorModernBlack"
                android:text="상품 목록"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gizo_jadoo"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/jadoo"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/gizo_apple"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/apple"
                    android:layout_marginRight="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gizo_prefare1"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/prefare"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/gizo_prefare2"
                    android:scaleType="fitXY"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/prefare"
                    android:layout_marginRight="15dp"/>

            </LinearLayout>


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/useimport_bottom2"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>