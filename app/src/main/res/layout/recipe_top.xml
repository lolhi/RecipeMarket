<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightOrange"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/straw" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanum_bold"
                    android:background="@drawable/hyungguangpen"
                    android:gravity="left|center_vertical"
                    android:text="낑깡"
                    android:textColor="@color/colorModernBlack"
                    android:textSize="20dp" />


                </RelativeLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="난이도:"
                        android:textSize="12dp"
                        android:textColor="@color/colorModernBlack"
                        android:fontFamily="@font/nanum_normal"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/detail_level"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="4dp"
                        android:scaleType="fitXY"

                        app:srcCompat="@drawable/level_low" />
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_normal"
                    android:text="칼로리:"
                    android:textSize="12dp"
                    android:textColor="@color/colorModernBlack" />

                <TextView
                    android:id="@+id/detail_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/nanum_normal"
                    android:text="10kcal"
                    android:textColor="@color/colorModernBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_normal"
                    android:text="소요시간:"
                    android:textSize="12dp"
                    android:textColor="@color/colorModernBlack" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:id="@+id/detail_time"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:fontFamily="@font/nanum_normal"
                    android:text="30분"
                    android:textColor="@color/colorModernBlack" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorLightOrange">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/detail_subtile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하서 우리나라 만세"
                        android:textColor="@color/colorModernBlack" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!-- 여기까지가 위에 수정할 리니어 레이아웃-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_hash1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_normal"
                android:text="#밥/국"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_hash2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanum_normal"
                android:text="#한식"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:visibility="gone" />

        </LinearLayout>

        <!--재료 관련 리니어-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="재료"
        android:textColor="@color/colorModernBlack"
        android:fontFamily="@font/nanum_bold"
        android:textSize="15dp"
        android:layout_marginBottom="3dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:srcCompat="@drawable/line_bold"/>



<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/material_recycle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</androidx.recyclerview.widget.RecyclerView>

</LinearLayout>


    </LinearLayout>
</RelativeLayout>