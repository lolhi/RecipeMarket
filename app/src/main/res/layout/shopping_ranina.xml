<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/ranina_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"

            app:srcCompat="@drawable/back_arr" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/profile_raninae"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_normal"
            android:gravity="center"
            android:text="라니네 농수산물"
            android:textColor="@color/colorModernBlack"
            android:textSize="20dp"

            />
        </LinearLayout>
        <ImageView
            android:id="@+id/ranina_basket"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/jangbagoony"/>
    </LinearLayout>


<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    app:srcCompat="@drawable/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="5dp"

                android:layout_marginLeft="25dp"

                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorModernBlack"

                android:text="농장소개"
                android:textSize="11dp"/>

    <TextView
            android:layout_marginTop="5dp"

            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="35dp"
            android:gravity="center"
            android:fontFamily="@font/nanum_normal"
            android:textColor="@color/colorModernBlack"

            android:text="농수산물을 생산자와 직거래하는 장터 입니다.^^"
            android:textSize="11dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"

                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/nanum_bold"
                android:textColor="@color/colorModernBlack"

                android:text="공지사항"
                android:textSize="11dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"

                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/nanum_normal"
                android:textColor="@color/colorModernBlack"

                android:text="♥공지♥ 곧 오픈하니 조금만 기다려주세요 ~~~~"
                android:textSize="11dp"/>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@drawable/line"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_normal"
        android:textColor="@color/colorModernBlack"
        android:text="상품 목록"
        android:textSize="16dp"
        />

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ranina_potato"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bannerpumpkin"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/ranina_corn"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bannergoguma"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ranina_honey"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/banneryangba"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/ranina_onion"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bannerprepare"
            android:layout_marginRight="15dp"/>

    </LinearLayout>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/useimport_bottom2"/>

</LinearLayout>
    </ScrollView>
</LinearLayout>