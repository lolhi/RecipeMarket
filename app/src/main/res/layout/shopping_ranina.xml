<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/ranina_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"

            app:srcCompat="@drawable/back_arr" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5">
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/profile_raninae"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanum_normal"
            android:gravity="center"
            android:text="라니네 농수산물"
            android:textColor="@color/colorModernBlack"
            android:textSize="20dp"

            />
        </LinearLayout>
        <ImageView
            android:id="@+id/ranina_basket"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/jangbagoony"/>
    </LinearLayout>



    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:fontFamily="@font/nanum_normal"
        android:textColor="@color/colorModernBlack"
        android:background="@drawable/search_bar"
        android:text="믿을 수 있는 농수산물을 생산자와 직거래하는 장터 입니다.^^"
        android:textSize="11dp"/>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_normal"
        android:textColor="@color/colorModernBlack"
        android:text="상품 목록"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ranina_potato"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/potato"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/ranina_corn"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/corn"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ranina_honey"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/honey"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/ranina_onion"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/onion"
            android:layout_marginRight="15dp"/>

    </LinearLayout>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/useimport_bottom2"/>

</LinearLayout>
    </ScrollView>
</LinearLayout>