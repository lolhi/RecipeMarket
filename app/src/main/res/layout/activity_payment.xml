<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paymentLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorWhite">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_normal"
                android:gravity="center_vertical"
                android:text="결제"
                android:textColor="@color/colorModernBlack"
                android:textSize="16dp"

                />

            <ImageView
                android:id="@+id/payment_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/back_arr" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanum_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="주문 고객 정보"
                    android:textColor="@color/colorModernBlack"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    app:srcCompat="@drawable/line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="주문자"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Custumer"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:hint="이름을 입력하세요."
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="이메일"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Email"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:hint="이메일을 입력하세요."
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="전화번호"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_PhoneNumber"
                        android:layout_width="0dp"

                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:hint="-를 제외하고 입력해주세요."

                        android:paddingLeft="10dp" />

                </LinearLayout>


            </LinearLayout>


            <!--배송받는사람-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanum_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="배송지 정보"
                    android:textColor="@color/colorModernBlack"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    app:srcCompat="@drawable/line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="받는분"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Receiver_Name"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="전화번호"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Receiver_Phone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="주소"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Receiver_AddressBig"
                        android:layout_width="0dp"

                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:hint="시,군,구를 입력해주세요."

                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="상세주소"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Receiver_AddressSmall"
                        android:layout_width="0dp"

                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"
                        android:hint="상세주소를 입력해주세요"

                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/nanum_normal"
                        android:paddingLeft="20dp"
                        android:text="배송 메시지"
                        android:textSize="12dp" />

                    <EditText
                        android:textSize="12dp"
                        android:shadowColor="@color/colorWhite"
                        android:id="@+id/payment_Receiver_Message"
                        android:layout_width="0dp"

                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edge"


                        android:paddingLeft="10dp" />

                </LinearLayout>


            </LinearLayout>

            <!--최종결제내역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="상품명"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="맛있는 보우짱 외 1건"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_productprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="총 상품금액"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product" />

                    <TextView
                        android:id="@+id/tv_productprice_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toStartOf="@id/tv_productprice_won"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

                    <TextView
                        android:id="@+id/tv_productprice_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="원"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

                    <TextView
                        android:id="@+id/tv_delivery_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="배송비"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_productprice" />

                    <TextView
                        android:id="@+id/tv_delivery_cost_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toStartOf="@id/tv_delivery_cost_won"
                        app:layout_constraintTop_toBottomOf="@id/tv_productprice_num" />

                    <TextView
                        android:id="@+id/tv_delivery_cost_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="원"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_productprice_num" />

                    <ImageView
                        android:id="@+id/iv_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"

                        app:layout_constraintTop_toBottomOf="@id/tv_delivery_cost"
                        app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/tv_notice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nanum_normal"
                        android:text="* 스토어별로 배송비가 적용됩니다."
                        android:textSize="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_line" />

                    <TextView
                        android:id="@+id/tv_notice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/nanum_normal"
                        android:text="* 제주도 및 도서산간 지역의 경우 추가로 배송비가 부과될 수 있습니다."
                        android:textSize="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_notice1" />

                    <ImageView
                        android:id="@+id/iv_line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_notice2"
                        app:srcCompat="@drawable/line" />

                    <TextView
                        android:id="@+id/tv_amount_of_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="최종 결제금액"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_line1" />

                    <TextView
                        android:id="@+id/tv_amount_of_payment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="0"
                        android:textColor="@color/colorOrange"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_amount_of_payment_won"
                        app:layout_constraintTop_toBottomOf="@id/iv_line1" />

                    <TextView
                        android:id="@+id/tv_amount_of_payment_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="원"
                        android:textColor="@color/colorOrange"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_line1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!--결제 수단-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanum_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="결제 방법"
                    android:textColor="@color/colorModernBlack"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    app:srcCompat="@drawable/line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/payment_Mutong"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:fontFamily="@font/nanum_normal"
                        android:gravity="center"
                        android:text="무통장입금"
                        android:textColor="@color/colorModernBlack"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/payment_Kakao"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:fontFamily="@font/nanum_normal"
                        android:gravity="center"
                        android:text="카카오페이"
                        android:textColor="@color/colorModernBlack"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/payment_Checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:buttonTint="@color/colorOrange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/nanum_normal"
                        android:gravity="center_vertical"
                        android:text="위 상품,배송,겨격정보에 동의합니다."
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/paymentBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorOrange"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_normal"
                android:gravity="center"
                android:text="결제하기"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>