<?xml version="1.0" encoding="utf-8"?>
<com.example.tablemanager.CustomScrollView android:id="@+id/scrollview_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/recipe_viewpager"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <com.example.tablemanager.CircleAnimIndicator
                android:id="@+id/circleAnimIndicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/recipe_viewpager"
                android:layout_marginBottom="30dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/user_recipe2"
            android:id="@+id/user_re_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/con">
        </LinearLayout>
    </LinearLayout>
</com.example.tablemanager.CustomScrollView>