<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:layout_marginBottom="3dp"
        >


        <TextView
            android:id="@+id/shopItem_title1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanum_normal"
            android:gravity="center_vertical"
            android:text="춘천감자"
            android:textColor="@color/colorModernBlack"
            android:textSize="16dp"

            />

        <ImageView
            android:id="@+id/shopItem_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/back_arr" />

        <ImageView
            android:id="@+id/shopItem_basket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            app:srcCompat="@drawable/jangbagoony" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/shopItem_Image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/straw"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/shopItem_title2"
                android:textColor="@color/colorModernBlack"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="춘천 감자"
                android:fontFamily="@font/nanum_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/shopItem_Cost"
                android:textColor="@color/colorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="16800"
                android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:textColor="@color/colorOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:text="원"
                    android:fontFamily="@font/nanum_bold"/>

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat = "@drawable/line"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat = "@drawable/profile_raninae"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="라니네 농수산물"/>
            </LinearLayout>

            <ImageView

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat = "@drawable/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView

                    android:textColor="@color/colorModernBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="배송"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:id="@+id/shopItem_DeliveryCost"
                    android:textColor="@color/colorDarkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:text="라니네 상품 30000원이상 구매시 무료!\n2500원"
                    android:fontFamily="@font/nanum_normal"/>
                <TextView
                    android:textColor="@color/colorDarkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/nanum_normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp">
                <TextView

                    android:textColor="@color/colorModernBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="원산지"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:id="@+id/shopItem_OriginItem"
                    android:textColor="@color/colorDarkgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="8.8dp"
                    android:text="각 상품별 상세설명 참조"
                    android:fontFamily="@font/nanum_normal"/>

            </LinearLayout>


        <TabHost
            android:id="@+id/shopItem_tabHost1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:fontFamily="@font/nanum_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TabWidget의 id값이 반드시 "tabs"로 지정되어야 함. -->
            <TabWidget

                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <!-- FrameLayout의 id값이 반드시 "tabcontent"로 지정되어야 함. -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/shopItem_Content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shopItem_Detail"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="1100dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shopItem_Content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shopItem_Info"
                        android:scaleType="fitXY"
                        app:srcCompat= "@drawable/info"
                        android:layout_width="match_parent"
                        android:layout_height="700dp" />

                </LinearLayout>



            </FrameLayout>
        </LinearLayout>
        </TabHost>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:id="@+id/shopItem_Final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

       <ImageView
           android:id="@+id/shopItem_DownDraw"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:srcCompat= "@drawable/mytop"
           android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/gray"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shopItem_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="춘천감자"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/colorModernBlack"/>


            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorWhite"
                    >
                        <TextView
                            android:paddingLeft="7dp"
                            android:id="@+id/shopItem_Minus"
                            android:layout_width="0dp"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:textSize="10dp"
                            android:layout_height="wrap_content"
                            android:text="ㅡ"/>

                    <TextView

                        android:id="@+id/shopItem_CountStatus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"

                        android:text="1"/>
                    <TextView
                        android:paddingRight="10dp"
                        android:gravity="right"
                        android:id="@+id/shopItem_Plus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="+"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 상품금액"/>
                    <TextView
                        android:id="@+id/shopItem_TotalCost"
                        android:layout_marginLeft="12dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/colorOrange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36000"/>
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/colorOrange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginBottom="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/shopItem_goBasket"
               android:layout_width="0dp"
               app:srcCompat = "@drawable/mybogooni"
               android:layout_height="50dp"
               android:layout_weight="1"/>
           <ImageView
               android:id="@+id/shopItem_goPayment"
               android:layout_width="0dp"
               app:srcCompat = "@drawable/myperchase"
               android:layout_height="50dp"
               android:layout_weight="1"/>
       </LinearLayout>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/shopItem_Btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/colorOrange"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorOrange">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_normal"
                android:gravity="center"
                android:text="구매하기"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>