<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypage_layout"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mypage_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:padding="10dp"
                app:srcCompat="@drawable/straw"></ImageView>

            <TextView
                android:id="@+id/mypage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="딸기 디저트"
                android:textColor="@color/colorModernBlack"
                android:fontFamily="@font/nanum_bold"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/mypage_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="딸기 디저트"
                android:fontFamily="@font/nanum_normal"

                android:textColor="@color/colorModernBlack"
                android:textSize="15dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mypage_level"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/level_hight"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/clock"/>
                    <TextView
                        android:id="@+id/mypage_time"

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:fontFamily="@font/nanum_normal"
                        android:text="30분"
                        android:gravity="center_vertical"
                        android:textSize="15dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>