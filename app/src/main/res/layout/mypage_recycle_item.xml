<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <LinearLayout
            android:id="@+id/mypage_layout"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mypage_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/straw"></ImageView>

            <TextView
                android:id="@+id/mypage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nanum_bold"
                android:text="딸기 디저트"

                android:layout_gravity="center_vertical"
                android:textColor="@color/colorModernBlack"
                android:textSize="12dp"></TextView>

            <TextView
                android:id="@+id/mypage_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:fontFamily="@font/nanum_normal"
                android:text="딸기 디저트"

                android:textColor="@color/colorModernBlack"
                android:textSize="7dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mypage_level"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/level_hight" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/mypage_time"

                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/nanum_normal"
                        android:gravity="center_vertical"
                        android:text="30분"
                        android:textSize="8dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>